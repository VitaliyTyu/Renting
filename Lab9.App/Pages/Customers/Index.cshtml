@page
@model Lab9.App.Pages.Customers.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Покупатели</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Создать покупателя</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Customers.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Customers.FirstOrDefault().Id">Id</label>
                        </th>
                        <th>
                            <label asp-for="Customers.FirstOrDefault().Name">Имя</label>
                        </th>
                        <th>
                            <label asp-for="Customers.FirstOrDefault().Age">Возраст</label>
                        </th>
                        <th>
                            <label asp-for="Customers.FirstOrDefault().Height">Рост</label>
                        </th>
                        <th>
                            <label asp-for="Customers.FirstOrDefault().Weight">Вес</label>
                        </th>
                        <th>
                            <label asp-for="Customers.FirstOrDefault().ShoeSizeRu">Размер обуви</label>
                        </th>
                        <th>
                            <label asp-for="Customers.FirstOrDefault().ClothingSizeRu">Размер одежды</label>
                        </th>
                        <th>
                        </th>
                    </tr>
                    @foreach (var customer in Model.Customers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => customer.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => customer.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => customer.Age)
                            </td>
                            <td>
                                @Html.DisplayFor(m => customer.Height)
                            </td>
                            <td>
                                @Html.DisplayFor(m => customer.Weight)
                            </td>
                            <td>
                                @Html.DisplayFor(m => customer.ShoeSizeRu)
                            </td>
                            <td>
                                @Html.DisplayFor(m => customer.ClothingSizeRu)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@customer.Id" class="btn btn-danger btn-sm">Удалить</button>
                                <a asp-page="Edit" asp-route-id="@customer.Id" class="btn btn-success btn-sm text-white">Редактировать</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Нет покупателей</p>
            }
        </form>
    </div>
</div>






