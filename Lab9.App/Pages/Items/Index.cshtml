@page
@model Lab9.App.Pages.Items.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Предметы</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Создать предмет</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Items.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Items.FirstOrDefault().Id"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().Type"></label>
                        </th>
                       <th>
                            <label asp-for="Items.FirstOrDefault().RentPrice"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().SizeRu"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().Length"></label>
                        </th>
                        <th>
                        </th>
                    </tr>
                    @foreach (var country in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => country.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => country.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => country.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(m => country.RentPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(m => country.SizeRu)
                            </td>
                            <td>
                                @Html.DisplayFor(m => country.Length)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@country.Id" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@country.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Нет предметов</p>
            }
        </form>
    </div>
</div>




