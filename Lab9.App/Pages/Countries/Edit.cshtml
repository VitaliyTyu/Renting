@page
@model Lab9.App.Pages.Countries.EditModel

<br />
<h2 class="text-info">Редактирование страны</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Country.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Country.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Country.Name" class="form-control" />
            </div>
            <span asp-validation-for="Country.Name" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Country.ApprovalRating"></label>
            </div>
            <div class="col-6">
                <input asp-for="Country.ApprovalRating" class="form-control" />
            </div>
            <span asp-validation-for="Country.ApprovalRating" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Назад</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
