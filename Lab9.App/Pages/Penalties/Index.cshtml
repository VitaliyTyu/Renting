@page
@model Lab9.App.Pages.Penalties.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Штрафы</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Создать штраф</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Penalties.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Penalties.FirstOrDefault().Id">Id</label>
                        </th>
                        <th>
                            <label asp-for="Penalties.FirstOrDefault().Type">Название</label>
                        </th>
                        <th>
                            <label asp-for="Penalties.FirstOrDefault().Price">Тип</label>
                        </th>
                        <th>
                            <label asp-for="Penalties.FirstOrDefault().Rent.Id">Id аренды</label>
                        </th>
                        <th>
                        </th>
                    </tr>
                    @foreach (var item in Model.Penalties)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Rent.Id)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Редактировать</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Нет штрафов</p>
            }
        </form>
    </div>
</div>




