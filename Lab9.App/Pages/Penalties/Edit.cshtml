@page
@model Lab9.App.Pages.Penalties.EditModel

<br />
<h2 class="text-info">Редактирование предмета</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Item.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Name">Название</label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Name" class="form-control" />
            </div>
            <span asp-validation-for="Item.Name" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Type">Тип</label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Type" class="form-control" />
            </div>
            <span asp-validation-for="Item.Type" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.RentPrice">Цена аренды</label>
            </div>
            <div class="col-6">
                <input asp-for="Item.RentPrice" class="form-control" />
            </div>
            <span asp-validation-for="Item.RentPrice" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.SizeRu">Размер RU</label>
            </div>
            <div class="col-6">
                <input asp-for="Item.SizeRu" class="form-control" />
            </div>
            <span asp-validation-for="Item.SizeRu" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Length">Длина</label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Length" class="form-control" />
            </div>
            <span asp-validation-for="Item.Length" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Width">Ширина</label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Width" class="form-control" />
            </div>
            <span asp-validation-for="Item.Width" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Country" class="control-label">Страна - производитель</label>
            </div>
            <div class="col-6">
                <select asp-for="Item.CountryId" class="form-control"
                        asp-items="@Model.RentIdSL">
                    <option value="">Выбор страны</option>
                </select>
                <span asp-validation-for="Item.CountryId" class="text-danger" />
            </div>
            <br />
        </div>

        <div class="form-group row" style="margin-top: 10px">
            <div class="col-3 offset-3">
                <input type="submit" value="Изменить" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Назад</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
